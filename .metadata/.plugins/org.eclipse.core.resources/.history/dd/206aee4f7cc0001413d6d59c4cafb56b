{
	static JCheckBox one , two, three, four, five, six, seven, eight, nine,
	ten, eleven, twelve, thirT, fourT, fifT, sixT, sevenT, eightT,
	nineT, twenty, twenty1, twenty2, twenty3, twenty4, twenty5;
	
	JLabel catCode = new JLabel("Category Codes     ");
	static JScrollPane scrollPanel = null;
	static JPanel checkPanel = new JPanel(new GridLayout(0, 5));
	JButton apply = new JButton("Apply");
	static JPanel catPanel = new JPanel();
	
	static JFrame frame = null;
	
	static int oneN=0, twoN=0, threeN=0, fourN=0, fiveN=0;
	
	CatCodeWindow()
	{
		this.setSize(500, 500);
		this.setLocation(200, 200);
		this.setTitle("Category Codes");
		
		
	}

	public static JPanel CatList()
